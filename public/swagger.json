{
  "swagger": "2.0",
  "info": {
    "title": "API Documentation",
    "description": "Documentaci칩n API proyecto MyPet NextJs",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "paths": {
    "/auth/login": {
      "/auth/login": {
        "post": {
          "summary": "Login a user",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "example": "user@example.com"
                    },
                    "password": {
                      "type": "string",
                      "example": "password123"
                    }
                  },
                  "required": [
                    "email",
                    "password"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Authorized",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "Authorized"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Invalid input",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Correo electr칩nico y contrase침a son requeridos"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "User not found",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Usuario no encontrado"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Contrase침a Incorrecta"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pets": {
      "get": {
        "summary": "Listar mascotas",
        "responses": {
          "200": {
            "description": "Lista de las mascotas",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Pet"
              }
            },
            "examples": {
              "application/json": [
                {
                  "id": 1,
                  "name": "Kayla",
                  "race": {
                    "id": 1,
                    "name": "Criollo"
                  },
                  "category": {
                    "id": 1,
                    "name": "Perro"
                  },
                  "photo": "/kayla-20240312.png",
                  "gender": {
                    "id": 2,
                    "name": "Hembra"
                  }
                },
                {
                  "id": 2,
                  "name": "Kitasura",
                  "race": {
                    "id": 3,
                    "name": "Unknown"
                  },
                  "category": {
                    "id": 2,
                    "name": "Gato"
                  },
                  "photo": "/Kitasura-20240518.jpg",
                  "gender": {
                    "id": 1,
                    "name": "Macho"
                  }
                }
              ]
            }
          },
          "400": {
            "description": "Solicitud incorrecta",
            "schema": {
              "$ref": "#/definitions/Error"
            },
            "examples": {
              "application/json": {
                "message": "Token Invalido"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Pet": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "race": {
          "$ref": "#/definitions/Race"
        },
        "category": {
          "$ref": "#/definitions/Category"
        },
        "photo": {
          "type": "string"
        },
        "gender": {
          "$ref": "#/definitions/Gender"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "Gender": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "Race": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Category": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "code": {
          "type": "integer"
        }
      }
    }
  }
}